<div id="sidebar" class="col-xs-2">
  <%= link_to image_tag('logo.png'), root_path %>
  <ul class="navbar nav menu">
    <% if logged? %>
      <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Hi, <%= current_user.first_name %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Profile', current_user %></li>
            <li><%= link_to 'My posts', user_messages_path(current_user) %></li>
            <li><%= link_to 'Change password', '#' %></li>
          </ul>
      </li>
      <li><%= link_to 'Users', users_path %></li>
      <li><%= link_to 'Messages', messages_path %></li>
      <li><%= link_to 'Logout', logout_path, method: :delete %></li>
    <% else %>
      <li><%= link_to 'Login', login_path, class: 'btn btn-primary' %></li>
    <% end %>
  </ul>
</div>