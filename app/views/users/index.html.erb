<h1>All Users</h1>
<table>
  <tr>
    <th>User name</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Action</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= link_to user.username, user_path(user) %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Update', edit_user_path(user) %>
      <%= link_to 'X', user, method: :delete, data: { confirm: 'Sure?' }%></td>
  </tr>
  <% end %>
</table>
<%= link_to 'Create User', users_new_path %>