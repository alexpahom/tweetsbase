<h1 class="title">All Users</h1>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <tr class="active">
    <th>User name</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= link_to user.username, user_path(user) %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email %></td>
    <td class="action-table"><%= link_to 'Update', edit_user_path(user), class: 'btn btn-default' %>
      <%= link_to 'X', user, method: :delete, data: { confirm: 'Sure?' }, class: 'btn btn-default'%></td>
  </tr>
  <% end %>
</table>
<%= link_to 'Create User', users_new_path, class: 'btn btn-default btn-primary' %>
</div>